{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx", // âœ… This is the fix
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client"],
        "baseUrl": ".", // allows absolute paths
        "paths": {
            "@/*": ["src/*"] // maps "@/lib/utils" to "src/lib/utils"
        }
    },
    "include": ["src"]
}
